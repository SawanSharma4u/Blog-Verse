<%- include("./partials/header"); -%>


<div class="container width container-fluid ml mr">
    <h2> Compose Your Blog Here </h2>
    <form action="/edit/<%= post._id %>" method="POST">
        <div class="form-group mt-5">
            <label for="postTitle"><h6>Title</h6></label>
            <input type="text" value="<%= post.title %>" name="postTitle" class="form-control" id="postTitle" required>
            <br>
            <label for="postBody"><h6>Post</h6></label>
            <textarea name="postContent" cols="40" rows="5" class="form-control" id="postBody" required><%= post.content %></textarea>
        </div>
        <br>
        <button class="btn btn-lg btn-primary mt-5" type="submit" name="publish">Update</button>
    </form>
</div>


<%- include("./partials/footer"); -%>
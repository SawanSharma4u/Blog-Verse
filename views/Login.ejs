<%- include("partials/header"); -%>
    <section>
      <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
          <div class="mt-5 col-md-8 col-lg-6 col-xl-6">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
              class="img-fluid" alt="Phone image">
          </div>
          <div class="mt-5 col-md-7 col-lg-5 col-xl-5 offset-xl-1 px-4 py-4" style="border: 1px solid black;">
            <h2 class="fw-bold text-center">Sign into your account</h2>
            <form class="px-4 py-4" action="/Login" method="POST">
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" name="username" id="form1Example13" class="form-control form-control-lg" required/>
                <label class="form-label" for="form1Example13">Email address</label>
              </div>
    
              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" name="password" id="form1Example23" class="form-control form-control-lg" required/>
                <label class="form-label" for="form1Example23">Password</label>
              </div>
    
              <div class="d-flex justify-content-between align-items-center">
                <!-- Checkbox -->
                <div class="form-check mb-4">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                  <label class="form-check-label" for="form2Example3">
                    Remember me
                  </label>
                </div class="mb-4">
                  <p class="small pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                </div>
              <div class="text-center">
                <p>Don't have an account? <a href="register" class="link-info">Register here</a></p>
                <button class="btn btn-dark btn-block text-white mt-4" style="width: 50%;" type="submit">Login</button>
              </div>
            </form>
            <div class="text-center divider d-flex align-items-center">
              <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
            </div>
            <div class="text-center mt-4">
              <a class="btn btn-danger btn-block px-5" href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                Sign In with Google
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include("partials/footer"); -%>
 